<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/editNameLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Full Name"
        android:textColor="#888888"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editNameET"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edittext_field"
        android:fontFamily="@font/poppins_regular"
        android:hint="Full Name"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="#525252" />

    <TextView
        android:id="@+id/editUsernameLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Username"
        android:textColor="#888888"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editUsernameET"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittext_field"
        android:fontFamily="@font/poppins_regular"
        android:hint="Username"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="#525252" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editSaveProfileBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gradient"
        android:fontFamily="@font/poppins_semibold"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/black" />
</LinearLayout>
