<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="20dp"
    android:background="@color/black"
    android:elevation="4dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/cardPosterIV"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardGenreTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/poppins_light"
        android:text="Animation, Comedy, Family"
        android:textColor="@color/pink"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardPosterIV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardTitleTV"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:maxLines="1"
        android:text="Movie Title"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cardPosterIV"
        app:layout_constraintTop_toBottomOf="@+id/cardGenreTV" />

    <ImageView
        android:id="@+id/ratingStar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@+id/cardTitleTV"
        app:layout_constraintTop_toBottomOf="@id/cardGenreTV"
        app:tint="@color/yellow" />

    <TextView
        android:id="@+id/cardRatingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text="7.7/10"
        android:textColor="@color/yellow"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ratingStar"
        app:layout_constraintTop_toBottomOf="@+id/cardGenreTV" />

    <TextView
        android:id="@+id/cardOverviewTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="3"
        android:text="TextView"
        android:textColor="#61FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardPosterIV"
        app:layout_constraintTop_toBottomOf="@+id/cardTitleTV" />

</androidx.constraintlayout.widget.ConstraintLayout>
